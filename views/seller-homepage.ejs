<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Seller Homepage</title>
  <!-- Bootstrap CSS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/seller-homepage.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/seller/header.ejs') %>

  <!-- Main Content -->
  <main class="container mt-4">
    <div class="row">
      <div class="col">
        <h2>Welcome, Seller!</h2>
        <a href="/seller/add-product" class="btn btn-primary mb-3">Add New Product</a>
        <div class="row">
          <% products.forEach(function(product) { %>
            <div class="col-md-4">
              <div class="card mb-4 shadow-sm">
                <a href="/seller/product/<%= product.id %>">
                  <img src="<%= product.productImage %>" class="card-img-top" alt="Product Image">
                </a>
                <div class="card-body">
                  <h5 class="card-title"><%= product.productName %></h5>
                  <p class="card-text">Price: $<%= product.price %></p>
                  <p class="card-text">Category: <%= product.category %></p>
                  <p class="card-text">Interior Style: <%= product.interiorStyle %></p>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
  </main>

  <%- include('partials/seller/footer.ejs') %>

  <!-- Bootstrap JS and dependencies -->
  <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
