<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Detail</title>
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/product-detail.css" rel="stylesheet"> <!-- Link đến file CSS mới -->
  <link href="/css/seller-homepage.css" rel="stylesheet">
</head>
<body>
  <%- include('../partials/seller/header.ejs') %>

  <main class="container mt-4">
    <div class="product-detail-box">
      <div class="row">
        <div class="col-md-6">
          <img src="<%= product.productImage %>" class="img-fluid main-image" alt="Product Image">
          <div class="mt-3 additional-images">
            <% product.additionalImages.forEach(function(image) { %>
              <img src="<%= image %>" class="img-thumbnail" alt="Additional Image">
            <% }); %>
          </div>
        </div>
        <div class="col-md-6">
          <h2><%= product.productName %></h2>
          <p><strong>Price:</strong> $<%= product.price %></p>
          <p><strong>Category:</strong> <%= product.category %></p>
          <p><strong>Interior Style:</strong> <%= product.interiorStyle %></p>
          <p><strong>Description:</strong> <%= product.description %></p>
          <p><strong>Quantity:</strong> <%= product.quantity %></p>
          <a href="/seller/edit-product/<%= productId %>" class="btn btn-primary">Edit Product</a>
        </div>
      </div>
    </div>
  </main>

  <%- include('../partials/seller/footer.ejs') %>
</body>
</html>
